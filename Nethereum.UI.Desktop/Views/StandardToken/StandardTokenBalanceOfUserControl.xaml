<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vmDesign="clr-namespace:Nethereum.UI.Desktop.Views.StandardToken.Designers;assembly=Nethereum.UI.Desktop"
			  x:Class="Nethereum.UI.Desktop.Views.StandardToken.StandardTokenBalanceOfUserControl"
             >
  <Design.DataContext>
    <vmDesign:StandardTokenBalanceOfViewModelDesigner/>
  </Design.DataContext>
  
  <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto, Auto, Auto, Auto">
    <TextBlock Text="Balance:" Classes="formLabel" Grid.Column="0" Grid.Row="0"/>
    <TextBlock Text="{Binding Balance}" Classes="formValue" Grid.Column="1" Grid.Row="0"/>
    <Button Content="Refresh Balance" Classes="formMainAction" Command="{Binding RefreshBalanceCommand}"
            Grid.Column="3" Grid.Row="0" />
  </Grid>
</UserControl>